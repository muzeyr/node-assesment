{
  "name": "node-assesment",
  "version": "1.0.7",
  "main": "src/app.ts",
  "scripts": {
    "start": "npm run tsc && NODE_ENV=production node dist/app.js",
    "dev": "nodemon src/app.ts",
    "test": "jest --forceExit",
    "tsc": "tsc",
    "postinstall": "npm run tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/muzeyr/node-assesment.git"
  },
  "keywords": [
    "Node Express Assesment"
  ],
  "author": "muzeyr",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "eslint": "^8.5.0",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.19.9",
    "@types/supertest": "^2.0.10",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.8.1",
    "jest": "^26.6.3",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.8",
    "supertest": "^6.0.1",
    "swagger-jsdoc": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsconfig": "jest.tsconfig.json"
      }
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "src/swagger.doc.ts"
    ],
    "testEnvironment": "node"
  }
}
